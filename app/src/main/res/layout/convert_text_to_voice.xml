<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.cardview.widget.CardView
        android:id="@+id/c"
        app:cardCornerRadius="20dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/included"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@android:dimen/thumbnail_width"

        tools:ignore="NotSibling">

        <EditText
            android:id="@+id/setTextToConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:selectAllOnFocus="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="50dp"
            android:inputType="textMultiLine"
            >
        </EditText>


        <Button
            android:id="@+id/favorite_word"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/ic_baseline_favorite_border_24">

        </Button>

        <ImageButton
            android:id="@+id/convertToVoice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/of_white"
            android:layout_gravity="right"
            android:src="@drawable/micrphone">
        </ImageButton>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>